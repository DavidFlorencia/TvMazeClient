<resources>
    <!-- Base application theme. -->
    <style name="Theme.TvMazeClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="detail_section_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_body_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detail_section_body">
        <item name="android:textSize">@dimen/detail_body_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>